{
    "scopeName": "source.bel-injection-yaml",
    "injectionSelector": "L:source.yaml",
    "patterns": [
        {
            "include": "#citation"
        },
        {
            "include": "#assertions"
        },
        {
            "include": "#annotations"
        },
        {
            "include": "#metadata"
        },
        {
            "include": "#nanopub"
        },
        {
            "include": "#evidence"
        }
    ],
    "repository": {
        "citation": {
            "begin": "(citation)(:)",
            "end": "\n| ",
            "beginCaptures": {
                "1": { "name": "entity.name.function.bel.citation"},
                "2": { "name": "punctuation.separator.key-value.mapping.yaml"}
			}
        },
        "assertions": {
            "begin": "(assertions)(:)",
            "end": "\n| ",
            "beginCaptures": {
                "1": { "name": "entity.name.function.bel.assertions"},
                "2": { "name": "punctuation.separator.key-value.mapping.yaml"}
			}
        },
        "evidence": {
            "begin": "(evidence)(:)",
            "end": "\n| |:|.",
            "beginCaptures": {
                "1": { "name": "entity.name.function.bel.evidence"},
                "2": { "name": "punctuation.separator.key-value.mapping.yaml"}
			}
        },
        "annotations": {
            "begin": "(annotations)(:)",
            "end": "\n| ",
            "beginCaptures": {
                "1": { "name": "entity.name.function.bel.annotations"},
                "2": { "name": "punctuation.separator.key-value.mapping.yaml"}
			}
        },
        "metadata": {
            "begin": "(-) (metadata)",
            "end": ":|\n| ",
            "beginCaptures": {
                "1": { "name": "punctuation.definition.block.sequence.item.yaml"},
                "2": { "name": "entity.name.class.bel.metadata"}
			}
        },
        "nanopub": {
            "begin": "(-) (nanopub)",
            "end": ":|\n| ",
            "beginCaptures": {
                "1": { "name": "punctuation.definition.block.sequence.item.yaml"},
                "2": { "name": "entity.name.class.bel.nanopub"}
			}
        }
    }
}